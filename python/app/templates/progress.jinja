{% extends "base.jinja" %}

{%- block content %}
		<div class="hero-sm bg-gray">
  			<div class="hero-body">
    			<h1>Lab status</h1>
    			<p>Overview of your own progress.</p>
				{% if labs|length %}
				<p>Permission for this page are looking good! Let's go ...</p>				
				{% else %}
				<p>To activate, you have to create this rolebinding in your namespace:</p>
				<code>kubectl create rolebinding progress --clusterrole=view --serviceaccount=your-namespace:default -n your-namespace</code>
				{% endif %}
				<p></p>
  			</div>
		</div>
		{% for lab in labs %}
		<div class="column col-8">
		<div class="tile">
			<div class="tile-icon">
				<figure class="avatar avatar-lg mr-2" data-initial="L{{ loop.index + 5 }}"></i></figure>
			</div>

			<div class="tile-content">
				<!--<p class="tile-title">{{ lab.name }}</p>-->
				<p class="tile-title">{{ lab.desc }}</p>

				<p>
				{% for task in lab.tasks %}
					<span class="label label-rounded {{ 'label-success' if task.status=="done" else 'label-error' }}">
				    {{ task.name }}
					</span>
				{% endfor %}
				</p>
			</div>

		</div>
		</div>
		{% endfor %}
{%- endblock %}

{%- block scripts %}
{%- endblock %}
